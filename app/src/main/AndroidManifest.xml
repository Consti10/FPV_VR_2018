<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="constantin.fpv_vr">
    <!-- Info about networks (EZ-WB connect via WIFI) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- for the notification -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".djiintegration.DJIApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,LockedOrientationActivity">
        <activity android:name=".OSD2.ATestlayout"
            android:theme="@style/MyStyleFullscreen">
        </activity>
        <activity
            android:name=".main.AMain"
            android:directBootAware="true"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter_rotg02" />
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter_rotg02" />
        </activity>
        <activity
            android:name=".play_mono.AMonoVideoOSD"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter_rotg02" />
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter_rotg02" />
        </activity>
        <activity
            android:name=".play_stereo.AStereoNormal"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen" />
        <activity
            android:name=".play_stereo.AStereoSuperSYNC"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen" />
        <activity
            android:name=".xexperimental.AStereoDaydream"
            android:enableVrMode="@string/gvr_vr_mode_component"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen"
            tools:targetApi="n">

            <!--
           <intent-filter>
               <action android:name="android.intent.action.MAIN" />
               <category
                   android:name="com.google.intent.category.DAYDREAM"
                   android:exported="false" />
               <category android:name="com.google.intent.category.CARDBOARD"
                   android:exported="false" />
           </intent-filter>
            -->
        </activity>
        <activity
            android:name=".connect.AConnect"
            android:screenOrientation="behind"
            android:theme="@style/MyStyleNoActionBar" />
        <activity
            android:name=".settings.AGroundRecordingSettings"
            android:screenOrientation="behind"
            android:theme="@style/MyStyleNoActionBar" />
        <activity
            android:name=".settingsOSD.ASettingsOSD"
            android:screenOrientation="behind" />

        <meta-data
            android:name="google_analytics_adid_collection_enabled"
            android:value="false" />
    </application>

</manifest>